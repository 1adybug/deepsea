{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "paths": {
            "@components/*": [
                "./src/components/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "exclude": [
        "dist"
    ]
}