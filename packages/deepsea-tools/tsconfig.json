{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "paths": {
            "@constants/*": [
                "src/constants/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        },
        "noEmit": true
    },
    "exclude": [
        "dist"
    ]
}